{
    "name": "bannerify/bannerify",
    "description": "Official PHP SDK for Bannerify API - Generate images and PDFs at scale",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Duc An",
            "email": "an@bannerify.co"
        }
    ],
    "keywords": ["bannerify", "image generation", "pdf generation", "api", "sdk"],
    "homepage": "https://bannerify.co",
    "support": {
        "docs": "https://bannerify.co/docs/sdk/php/overview",
        "issues": "https://github.com/bannerify/bannerify-php/issues",
        "source": "https://github.com/bannerify/bannerify-php"
    },
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Bannerify\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "sort-packages": true
    }
}

